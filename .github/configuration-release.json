{
  "template": "## [{{toTag}}] - {{targetDate}}\n\n{{changelog}}\n\n---\n",
  "pr_template": "- {{title}} #{{number}}",
  "commit_template": "- {{title}} ([{{hash}}]({{url}}))",
  "empty_template": "- No changes",
  "base_branches": ["main"],
  "include_open": false,
  "include_closed": true,
  "include_merged": true,
  "include_commits": true,
  "categories": [
    {
      "title": "### ğŸš€ Features",
      "labels": ["feature", "enhancement", "feat"],
      "commits": {
        "patterns": ["^feat(\\(.+\\))?!?:", "^feature(\\(.+\\))?!?:"]
      }
    },
    {
      "title": "### ğŸ› Bug Fixes", 
      "labels": ["bug", "fix", "bugfix"],
      "commits": {
        "patterns": ["^fix(\\(.+\\))?!?:", "^bugfix(\\(.+\\))?!?:"]
      }
    },
    {
      "title": "### ğŸ“š Documentation",
      "labels": ["documentation", "docs"],
      "commits": {
        "patterns": ["^docs?(\\(.+\\))?!?:"]
      }
    },
    {
      "title": "### ğŸ”§ Maintenance",
      "labels": ["chore", "maintenance", "refactor"],
      "commits": {
        "patterns": ["^chore(\\(.+\\))?!?:", "^refactor(\\(.+\\))?!?:", "^style(\\(.+\\))?!?:"]
      }
    },
    {
      "title": "### â¬†ï¸ Dependencies",
      "labels": ["dependencies", "deps"],
      "commits": {
        "patterns": ["^build(\\(.+\\))?!?:", "^ci(\\(.+\\))?!?:"]
      }
    },
    {
      "title": "### Other Changes",
      "labels": [],
      "commits": {
        "patterns": [".*"]
      }
    }
  ],
  "ignore_labels": [
    "skip-changelog",
    "release"
  ],
  "ignore_commits": {
    "patterns": [
      "^chore\\(release\\):",
      "^Merge branch",
      "^Merge pull request",
      "\\[skip ci\\]",
      "\\[skip changelog\\]"
    ]
  },
  "sort": "ASC"
} 